<div class="comment-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <% if logged_in? %>
            <%= f.hidden_field :review_id, :value => params[:review_id] %> 
            <%= f.submit 'Create Comment', class: 'btn btn-black btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
