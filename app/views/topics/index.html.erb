<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'like-btn' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart-black.png', class: 'unlike-btn' %>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
            <%= link_to comments_new_path(topic_id: topic.id),remote: true do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon ' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h4 class="comment-title">投稿コメント</h4>
            
            <div id=<%= "comment_new#{topic.id}" %>></div>
            
            <% topic.comments.each do |comment| %>
              <p><%= comment.body %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>