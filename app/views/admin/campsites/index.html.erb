<div class="review-index-wrapper">
  <div class="container">
    <% @campsites.each do |campsite| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="review-index-single">
            <h2 class="review-author">
              <%= campsite.title %>
            </h2>
            <%= image_tag campsite.image %>
            <p class="campsite-text">
              <%= campsite.content %>
            </p>
            <p><%= campsite.master.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>