<div class="master-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 master-new-container">
        <h1 class="text-center text-white">Log in</h1>
        <%= form_for :master, :url => { :action => :create } do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "text-white" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :login_id, class: "text-white" %>
            <%= f.text_field :login_id, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: "text-white" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "text-white" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <%= f.submit "ログイン", class: "btn-block btn-white" %>
        <% end %>
      </div>
    </div>
  </div>
</div>