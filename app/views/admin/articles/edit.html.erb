<body>
    <h1>管理画面</h1>
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <h1><%= link_to "Article", admin_articles_path %></h1>
        <h1><%= link_to "Gaers", admin_gears_path %></h1>
        <h1><%= link_to "Campsites", admin_campsites_path %></h1>
        <h1><%= link_to "Users", users_path %></h1>
      </ul>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <div class="article-new-wrapper">
          <div class="container">
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">ARTICLE 編集ページ</h1>
                <%= form_for @article,:url => {:action => :update} do |f| %>
                  <div class="form-group">
                    <%= f.label :image %>
                    <%= f.file_field :image %>
                  </div>
                  <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_area :title, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :content %>
                    <%= f.text_area :content, class: 'form-control' %>
                  </div>
                  <%= f.submit '更新', class: 'btn btn-black btn-block' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </table>
    </div>
</body>