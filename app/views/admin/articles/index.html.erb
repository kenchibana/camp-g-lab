 <body>
    <h1>管理画面</h1>
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <h1><%= link_to "Article", admin_articles_path %></h1>
        <h1><%= link_to "Gaers", admin_gears_path %></h1>
        <h1><%= link_to "Campsites", admin_campsites_path %></h1>
        <h1><%= link_to "Users", users_path %></h1>
      </ul>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
      　<div class="review-index-wrapper">
          <div class="container">
            <div class="col-md-6 col-md-offset-3">
              <%= link_to 'New Article', new_admin_article_path, class: 'btn btn-primary' %>
            </div>
            <% @articles.each do |article| %>
              <div class="row">
                <div class="col-md-6 col-md-offset-3">
                  <div class="review-index-single">
                    <h2 class="review-author">
                      <%= article.title %>
                    </h2>
                    <%= image_tag article.image.url %>
                    <p class="article-text">
                      <%= article.content %>
                    </p>
                    <p><%= article.master.name %></p>
                    <%= link_to '編集', edit_admin_article_path(article), class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    　</table>
    </div>
</body>