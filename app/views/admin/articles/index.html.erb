<div class="article-index-wrapper">
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="article-index-single">
            <h2 class="article-author">
              <%= article.title %>
            </h2>
            <h4><%= image_tag article.image.url %></h4>
            <p class="article-text">
              <%= article.content %>
            </p>
            <p><%= article.master.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>