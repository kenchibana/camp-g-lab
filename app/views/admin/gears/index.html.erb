<body>
    <h1>管理画面</h1>
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <h1><%= link_to "Article", admin_articles_path %></h1>
        <h1><%= link_to "Gaers", admin_gears_path %></h1>
        <h1><%= link_to "Campsites", admin_campsites_path %></h1>
        <h1><%= link_to "Users", users_path %></h1>
      </ul>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <div class="review-index-wrapper">
          <div class="container">
            <% @gears.each do |gear| %>
              <div class="row">
                <div class="col-md-6 col-md-offset-3">
                  <div class="review-index-single">
                    <h2 class="review-author">
                      <%= link_to gear.name, gear.content %>
                    </h2>
                    <a><%= image_tag gear.image %></a>
                    <p class="gear-text">
                      <%= link_to "Amazon", gear.content %>
                    </p>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </table>
    </div>
</body>