<div class="review-index-wrapper">
  <div class="container">
    <% @gears.each do |gear| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="review-index-single">
            <h2 class="review-author">
              <%= link_to gear.name, gear.content %>
            </h2>
            <a><%= image_tag gear.image %></a>
            <p class="gear-text">
              <%= link_to "Amazon", gear.content %>
            </p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>