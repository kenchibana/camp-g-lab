<!DOCTYPE html>
<html>
  <head>
    <title>CampGLab</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
      <% end %>
        <header>
          <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
              <%= link_to root_path do %>
                <span><%= image_tag "icons/_i_icon_13986_icon_139860_256.png", class: "navbar-brand" %></span>
              <% end %>
              <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                  <li>
                    <%= link_to favorites_index_path do %>
                      <%= image_tag 'icons/heart.png' %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "/users/#{current_user.id}" do %>
                      <%= image_tag "icons/camera.png" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to logout_path, method: :delete do %>
                      <%= image_tag "icons/logout.png" %>
                    <% end %>
                  </li>
                <% elsif sing_in? %>
                  <li>
                    <%= link_to admin_logout_path, method: :delete do %>
                      <%= image_tag "icons/logout.png" %>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to new_user_path do %>
                      <%= image_tag "icons/register.png" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to login_path do %>
                      <%= image_tag "icons/login.png" %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
          </nav>
          <script>
            $(function(){
               $(".alert").fadeOut(2000);
            });
          </script>
        </header>
        <div class="top-hero-wrapper text-center">
          <div class="container top-hero-container">
            <h1 class="text-white">CAMP GLAB</h1>
            <h2 class="text-white">キャンプ情報満載</h2>
          </div>
        </div>
        <div class="row">
          <div class="flex-container">
            <div class="flex-item"><a href="articles">キャンプ特集</a></div>
            <div class="flex-item"><a href="gears">キャンプギア</a></div>
            <div class="flex-item"><a href="campsites">キャンプ場</a></div>
            <div class="flex-item"><a href="reviews/index">レビュー</a></div>
          </div>
        </div>
      <%= yield %>
  </body>
</html>
