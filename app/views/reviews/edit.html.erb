<div class="table-responsive">
  <table class="table table-striped">
    <div class="article-new-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">REVIEW 編集ページ</h1>
            <%= form_for @review,:url => {:action => :update} do |f| %>
              <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>
              <%= f.submit '更新', class: 'btn btn-black btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </table>
</div>